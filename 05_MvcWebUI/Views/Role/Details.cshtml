@model _04_Business.Models.RoleModel
@{
    ViewData["Title"] = "Role Details";
}

<h1>Role Details</h1>

<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10" style="padding: 0 !important;">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users)
        </dt>
        @if (Model.Users != null && Model.Users.Count > 0)
        {
            <dd class="col-sm-10">
                <ol style="padding: 0;">
                    @foreach (var user in Model.Users)
                    {
                        <li>@user.UserName</li>
                    }
                </ol>
            </dd>
        }
        else
        {
            <dd class="col-sm-10" style="padding: 0 !important;">
                <span>No users found.</span>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to Role List</a>
</div>
