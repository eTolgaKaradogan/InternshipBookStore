@model _04_Business.Models.PasswordRecoveryModel


@{
    var searchToken = Guid.NewGuid().ToString();
    var recoveryCode = Guid.NewGuid().ToString();
    var password = Guid.NewGuid().ToString();
}

<h1 class="text-center">Password Recovery</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 text-center">
        <form asp-action="PasswordRecovery" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" asp-route-email="@searchToken" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecoveryCode"></label>
                <input asp-for="RecoveryCode" asp-route-recoveryCode="@recoveryCode" class="form-control" />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" asp-route-password="@password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input id="btnSearchMembers" type="submit" value="Send Code" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    window.onload = function(){
    var searchLink = document.getElementById("btnSearchMembers");
    var originalHref = searchLink.href;
        searchLink.onclick = function (e)
        e.target.href = originalHref.replace("@searchToken", searchTextElement.value);
        e.target.href = originalHref.replace("@password", searchTextElement.value);
        e.target.href = originalHref.replace("@recoveryCode", searchTextElement.value);
    };
}
</script>