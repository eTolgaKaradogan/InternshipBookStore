@model _04_Business.Models.AccountModel

<h1 class="text-center">Update Account</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 text-center">
        <form asp-action="Edit">
            <input asp-for="Id" type="hidden" />
            <input asp-for="RoleId" type="hidden" />
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (ViewBag.Message != null)
            {
                <p class="bg-danger text-white">@ViewBag.Message</p>
            }
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success profileSave-button" style="position: relative; left: -2px; top: 10px;" />
            </div>
        </form>
    </div>
</div>