@model _04_Business.Models.BookModel

<div class="container">
    <div class="row justify-content-center" style="position: relative; top: 110px;">
        <h5>Are you sure you want to delete this?</h5>
        <form asp-action="Delete" asp-for-id="@Model.Id" method="post">
            <div>
                <button type="submit" class="btn btn-danger" style="position: relative;top: 60px;left: -250px;">Delete</button>
            </div>
        </form>
        <a class="btn btn-primary" asp-action="Index" style="position: relative; top: 60px; left: -240px;">Cancel</a>
    </div>
</div>