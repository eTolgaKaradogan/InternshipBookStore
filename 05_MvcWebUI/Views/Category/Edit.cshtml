@model _04_Business.Models.CategoryModel

<div class="container">
    <div>
        <div class="row">
            @using (Html.BeginForm())
            {
                <input asp-for="Id" type="hidden" />
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
    <form id="deleteCategoryForm" asp-action="Delete" method="post">
        <input asp-for="Id" type="hidden" />
    </form>

    <div>
        <button id="deleteCategoryButton" class="btn btn-danger">Delete</button>
        <br />
        <br />
        <a class="btn btn-secondary" asp-action="Index">Back to Category List</a>
    </div>
</div>


@section Scripts
{
    <script>$(() => {
            $("#deleteCategoryButton").click(function () {
                $("#deleteCategoryForm").submit();
            });
        });</script>
}
